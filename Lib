<script>
    var synth = window.speechSynthesis;
    var utterance;
    var isPlaying = false;
    var isPaused = false;
    var playIcon = document.getElementById('playIcon');
    var pauseIcon = document.getElementById('pauseIcon')

    var synth = window.speechSynthesis;
    var utterance;
    var isPlaying = false;
    var isPaused = false;
    var playIcon = document.getElementById('playIcon');
    var pauseIcon = document.getElementById('pauseIcon');

    function toggleIcons() {
        playIcon.classList.toggle('hidden');
        pauseIcon.classList.toggle('hidden');
    }

    function togglePlayPause() {
        if (isPlaying) {
            if (isPaused) {
                retomar();
            } else {
                pausar();
            }
        } else {
            falar();
        }
    }

    function falar() {
        var texto = document.getElementById('texto').value;
        utterance = new SpeechSynthesisUtterance(texto);
        utterance.lang = 'pt-br'
    }

    var synth = window.speechSynthesis;
    var utterance;
    var isPlaying = false;
    var isPaused = false;
    var playIcon = document.getElementById('playIcon');
    var pauseIcon = document.getElementById('pauseIcon');

    function toggleIcons() {
        playIcon.classList.toggle('hidden');
        pauseIcon.classList.toggle('hidden');
    }

    function togglePlayPause() {
        if (isPlaying) {
            if (isPaused) {
                retomar();
            } else {
                pausar();
            }
        } else {
            falar();
        }
    }

    function falar() {
        var texto = document.getElementById('texto').value;
        utterance = new SpeechSynthesisUtterance(texto);
        utterance.lang = 'pt-Br'
    }
    var synth = window.speechSynthesis;
    var utterance;
    var isPlaying = false;
    var isPaused = false;
    var playIcon = document.getElementById('playIcon');
    var pauseIcon = document.getElementById('pauseIcon');

    function toggleIcons() {
        playIcon.classList.toggle('hidden');
        pauseIcon.classList.toggle('hidden');
    }

    function togglePlayPause() {
        if (isPlaying) {
            if (isPaused) {
                retomar();
            } else {
                pausar();
            }
        } else {
            falar();
        }
    }

    function falar() {
        var texto = document.getElementById('texto').value;
        utterance = new SpeechSynthesisUtterance(texto);
        utterance.lang = ''
    }

    var synth = window.speechSynthesis;
    var utterance;
    var isPlaying = false;
    var isPaused = false;
    var playIcon = document.getElementById('playIcon');
    var pauseIcon = document.getElementById('pauseIcon');

    function toggleIcons() {
        playIcon.classList.toggle('hidden');
        pauseIcon.classList.toggle('hidden');
    }

    function togglePlayPause() {
        if (isPlaying) {
            if (isPaused) {
                retomar();
            } else {
                pausar();
            }
        } else {
            falar();
        }
    }

    function falar() {
        var texto = document.getElementById('texto').value;
        utterance = new SpeechSynthesisUtterance(texto);
        utterance.lang = 'pt-BR';
        synth.speak(utterance);
        isPlaying = true;
        isPaused = false;
        toggleIcons();

        utterance.onend = function () {
            isPlaying = false;
            toggleIcons();
        };
    }

    function pausar() {
        synth.pause();
        isPaused = true;
        toggleIcons();
    }

    function retomar() {
        synth.resume();
        isPaused = false;
        toggleIcons();
    }
</script>
